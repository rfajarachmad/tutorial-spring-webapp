<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
        http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.2.xsd">


	<http auto-config="true" use-expressions="true">
		<intercept-url pattern="/login.zul" access="permitAll" /> 
		<intercept-url pattern="/*" access="isAuthenticated()" /> 
		<form-login 
			login-page="/login.zul" 
			authentication-failure-url="/login.zul?login_error=1" 
			default-target-url="/index" 
			always-use-default-target="true"  
		/>
		<logout logout-success-url="/login.zul" />
	</http>

	<authentication-manager>
		<authentication-provider ref="customAuthenticationProvider" />
	</authentication-manager>
	
	<beans:bean id="customAuthenticationProvider" class="com.fajarachmad.tutorial.security.MyAuthenticationProvider" />
	
</beans:beans>