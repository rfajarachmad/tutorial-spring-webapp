<?page title="User Search" contentType="text/html;charset=UTF-8"?>
<zk>
<window id="userSearch" title="User Search" border="normal"
apply="org.zkoss.bind.BindComposer"
 viewModel="@id('vm') @init('com.fajarachmad.tutorial.viewmodel.UserViewModel')"
>
<grid>
	<columns >
		<column width="30%" />
		<column width="1%" />
		<column />
	</columns>
	<rows>
		<row>
			<label value="Username" />
			<label value=":"/>
			<textbox id="txtUsername" value="@bind(vm.txtUserName)" />
		</row>
		<row>
			<label />
			<label />
			<hbox>
				<button label="Search" id="btnSearch" onClick="@command('search')"/>
				<space />
				<button label="New" id="btnNew" />
			</hbox>
		</row>
	</rows>
</grid>
<space />
<groupbox>
	<caption label="Search Result" />
	<listbox id="lstResult">
		<listhead>
			<listheader>Username</listheader>
			<listheader width="15%">Active</listheader>
			<listheader width="15%">Action</listheader>
		</listhead>
		<template name="model">
			<listitem>
				<listcell label="@bind{each.username }"/>
				<listcell label="@bind{each.active }"/>
				<listcell>
					<a label="detail" forward="onDetail(${each})" /> |
					<a label="delete" forward="onDelete(${each})" />
				</listcell>
			</listitem>
		</template>
	</listbox>
</groupbox>
</window>
</zk>